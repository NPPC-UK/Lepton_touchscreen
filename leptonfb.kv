#:kivy 1.0.9

<LeptonFBWidget>:
    canvas:
        Rectangle:
            id: image_rect
            pos: 0,100
            size: 600,400
        Rectangle:
            id: colourmap_rect
            pos: 450,150
            size: 20,256



    GridLayout:
        Button:
            text: "Shutdown (h)"
            id: exit_btn
            text_size: self.size
            font_size: '20sp'
            markup: True
            pos: 110,0
            on_press: root.exit()
            
        Button:
            text: "Save (s)"
            id: save_btn
            text_size: self.size
            font_size: '20sp'
            markup: True
            pos: 110,0
            on_press: root.save_image()
            

	Button:
	    text: "Change Display (d)"
	    id: disp_btn
	    text_size: self.size
	    font_size: '20sp'
	    markup: True
	    pos: 220,0
	    on_press: root.change_display()

	Button:
	    text: "Change Colourmap (c)"
	    id: disp_btn
	    text_size: self.size
	    font_size: '20sp'
	    markup: True
	    pos: 0,0
	    on_press: root.change_colourmap()




	Slider:
	    id: min_temp_slider
	    pos: 680,120
	    height: 150
	    orientation: 'vertical'
	    range: (0,30)
	    value: 10

	Slider:
	    id: max_temp_slider
	    pos: 680,280
	    height: 150
	    orientation: 'vertical'
	    range: (20,60)
	    value: 40

	Label: 
	    id: min_temp_slider_label
	    pos: 600,120
	    text: "Coldest\ntemperature\nto display"

    
	Label: 
	    id: max_temp_slider_label
	    pos: 610,280
	    text: "Hottest\ntemperature\nto display"
	    
            
        Label:
            id: status_label
            pos: 660,0
            
        Label:
            id: mesg_label
            pos: 500,0
            text: ""

        Label:
            id: min_label
            pos: 712,60
            text: ""

        Label:
            id: mid_label
            pos: 712,230
            text: "mid"

        Label:
            id: max_label
            pos: 712,420
            text: ""
