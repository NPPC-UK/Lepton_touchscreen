#:kivy 1.0.9

<LeptonFBWidget>:
    canvas:
        Rectangle:
            id: image_rect
            pos: 0,100
            size: 600,400
        Rectangle:
            id: colourmap_rect
            pos: 500,100
            size: 20,256


    GridLayout:
        Button:
            text: "Exit"
            id: exit_btn
            text_size: self.size
            font_size: '20sp'
            markup: True
            pos: 0,0
            on_press: root.exit()
            
        Button:
            text: "Save"
            id: save_btn
            text_size: self.size
            font_size: '20sp'
            markup: True
            pos: 110,0
            on_press: root.save_image()
            
        Button:
            text: "Change Mode"
            id: mode_btn 
            text_size: self.size
            font_size: '20sp'
            markup: True
            pos: 220,0
            on_press: root.change_mode()

            
            
        Label:
            id: status_label
            pos: 420,0
            
        Label:
            id: mode_label
            pos: 320,0
            text: "Normalised"
